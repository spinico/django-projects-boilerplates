{
  "python.venvPath": "${workspaceFolder}\\..",
  "python.venvFolders": [".venv"],
  "python.pythonPath": "${workspaceFolder}\\..\\.venv\\Scripts\\python.exe",
  "python.interpreterPath": "${workspaceFolder}\\..\\.venv\\Scripts\\python.exe",
  // Set to false to enable Microsoft Python Language Server
  "python.jediEnabled": true,
  // Fix "unresolved imports" error when using Microsoft Python Language Server
  "python.autoComplete.extraPaths": ["..\\..\\apps"],
  // Silence remaining unresolved import
  //"python.analysis.disabled": ["unresolved-import"],
  "files.associations": {
    "**/templates/*.html": "django-html",
    "**/templates/*": "django-txt"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.DS_Store": true,
    "node_modules": true,
    "build": true,
    "**/__pycache__": true,
    "**/*.js": { "when": "$(basename).ts"},
    "**/*.js.map": true
  },
  "workbench.settings.editor": "json",
  "workbench.settings.useSplitJSON": true,
  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#276679"
  },
  "editor.formatOnSave":  true,
  "editor.rulers": [120],
  "[git-commit]": {
    "editor.rulers": [50]
  },
  "[python]": {
    "editor.rulers": [80, 120]
  },
  "[django-html]": {
    "editor.rulers": [120]
    "editor.formatOnSave": false
  },
  "[javascript]": {
    "editor.formatOnSave": false,
  },
  "[typescript]": {
    "editor.formatOnSave": false,
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
